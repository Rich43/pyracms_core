{% extends "main.jinja2" %}
{% block title %} - Manage Users{% endblock %}
{% block content %}
<h2>Manage Users</h2>
<table>
    <tr>
        <th>Username</th>
        <th>Actions</th>
    </tr>
    {% for user in users %}
    <tr>
        <td>{{ user.name }}</td>
        <td><a href="{{ request.route_url("userarea_admin_manage_user",
                name=user.name) }}">Edit</a> |
            <a href="{{ request.route_url("userarea_admin_delete_user",
                name=user.name) }}">Delete</a></td>
    </tr>
    {% endfor %}
</table>
{% endblock %}